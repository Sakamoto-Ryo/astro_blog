---
import Layout from '../components/Layout.astro';
import { getCollection } from 'astro:content';

// 获取所有博客文章
const blogPosts = await getCollection('blog');
console.log('博客文章数量:', blogPosts.length);
console.log('博客文章:', blogPosts);

---

<Layout title="我的文章">
  <main>
    <section class="page-header">
      <h1>我的文章</h1>
      <p>记录我的学习和思考历程</p>
    </section>
    <section class="article-list">
        {blogPosts.length === 0 ? (
          <p>暂无文章</p>
        ) : (
          <ul>
            {blogPosts.map((post: any) => (
              <li>
                <a href={`/blog/${post.slug}/`}>
                  <h3>{post.data.title || '未命名文章'}</h3>
                  <p>{post.data.description}</p>
                  <time>{new Date(post.data.date).toLocaleDateString('zh-CN')}</time>
                </a>
              </li>
            ))}
          </ul>
        )}
    </section>
  </main>
</Layout>
<style>
  .page-header {
    text-align: center;
    padding: 3rem 0;
    background: #f8f9fa;
  }
  
  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #333;
  }
  
  .page-header p {
    font-size: 1.2rem;
    color: #666;
  }
  
  .article-list {
    max-width: 800px;
    margin: 2rem auto;
    padding: 0 1rem;
  }
  
  .article-list ul {
    list-style: none;
    padding: 0;
  }
  
  .article-list li {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #eee;
    transition: transform 0.2s ease;
  }
  
  .article-list li:hover {
    transform: translateY(-3px);
  }
  
  .article-list li:last-child {
    border-bottom: none;
  }
  
  .article-list a {
    text-decoration: none;
    color: #333;
    display: block;
  }
  
  .article-list h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: #2c3e50;
  }
  
  .article-list p {
    color: #666;
    margin-bottom: 0.5rem;
  }
  
  .article-list time {
    color: #999;
    font-size: 0.9rem;
  }
</style>